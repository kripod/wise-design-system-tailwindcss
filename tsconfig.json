{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types"
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.mjs", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/", "build/", "dist/"]
}
