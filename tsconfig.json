{
  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/esm/tsconfig.json"
  ],
  "compilerOptions": {
    "noEmit": true,
    "target": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "incremental": true
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.mjs", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/", "build/", "dist/"]
}
