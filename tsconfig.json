{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/", "build/", "dist/"]
}
