{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "css-homogenizer/reset-scoped/react",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.mjs", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/", "build/", "dist/"]
}
