{
  "root": true,
  "extends": [
    "@wise/eslint-config/base-strict",
    "@wise/eslint-config/react",
    "@wise/eslint-config/storybook",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["react-refresh"],
  "settings": {
    "jsx-a11y": {
      "polymorphicPropName": "as",
      "components": {
        "ActionButton": "button",
        "Button": "button",
        "ButtonInput": "button",
        "ButtonPrimary": "button",
        "ButtonSecondary": "button",
        "ButtonTertiary": "button",
        "Chip": "button",
        "ChipCheckbox": "button",
        "ChipRadio": "button",
        "CircularButton": "button",
        "CloseButton": "button",
        "InlineLink": "a",
        "Instruction": "li",
        "InstructionList": "ul",
        "Label": "label",
        "Link": "a",
        "SearchInput": "input",
        "SelectInput": "select",
        "TextAreaInput": "textarea",
        "TextInput": "input"
      }
    }
  },
  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      { "allowConstantExport": true }
    ],
    "tailwindcss/classnames-order": "off", // Enforced by Prettier
    "tailwindcss/no-custom-classname": "off" // Avoid distractions while typing
  }
}
