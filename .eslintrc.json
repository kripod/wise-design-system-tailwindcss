{
  "root": true,
  "extends": [
    "@wise/eslint-config/base-strict",
    "@wise/eslint-config/typescript-strict",
    "@wise/eslint-config/react",
    "@wise/eslint-config/storybook",
    "plugin:tailwindcss/recommended"
  ],
  "settings": {
    "jsx-a11y": {
      "components": {
        "ActionButton": "button",
        "CircularButton": "button",
        "InlineLink": "a",
        "Label": "label",
        "Link": "a",
        "PrimaryButton": "button",
        "SecondaryButton": "button",
        "TertiaryButton": "button",
        "TextAreaInput": "textarea",
        "TextInput": "input"
      }
    }
  },
  "rules": {
    "tailwindcss/classnames-order": "off", // Enforced by Prettier
    "tailwindcss/no-custom-classname": "off" // Avoid distractions while typing
  },
  "overrides": [
    {
      "files": "**/*.stories.*",
      "rules": {
        "@typescript-eslint/no-unsafe-call": "off" // TODO: Remove when fixed
      }
    }
  ]
}
