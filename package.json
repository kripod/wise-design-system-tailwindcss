{
  "name": "neptune-web-tailwind-poc",
  "private": true,
  "scripts": {
    "build": "ladle build",
    "clean": "git clean --interactive -dx --exclude .env.local --exclude .env.*.local --exclude node_modules/ --exclude .husky/",
    "dev": "ladle serve",
    "fix": "run-s fix:*",
    "fix:eslint": "pnpm run lint:eslint --fix",
    "fix:prettier": "pnpm run lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .ts,.tsx,.js,.jsx --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint:typescript": "tsc",
    "prepare": "husky install",
    "start": "ladle preview"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.3",
    "@radix-ui/react-id": "^1.0.0",
    "clsx": "^1.2.1",
    "ts-essentials": "^9.3.0",
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@ladle/react": "2.4.4",
    "@transferwise/icons": "3.1.2",
    "@tsconfig/next": "1.0.3",
    "@types/node": "16.11.66",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/use-sync-external-store": "0.0.3",
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "color2k": "2.0.0",
    "eslint": "8.25.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-etc": "2.0.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "focus-visible": "5.2.0",
    "husky": "8.0.1",
    "nano-staged": "0.8.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.18",
    "postcss-import": "15.0.0",
    "postcss-preset-env": "7.8.2",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "0.1.13",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.1.8",
    "tailwindcss-inner-border": "0.2.0",
    "typescript": "4.8.4"
  },
  "peerDependencies": {
    "@transferwise/icons": "^3.1",
    "focus-visible": ">=5",
    "react": "16.14 - 18"
  },
  "peerDependenciesMeta": {
    "focus-visible": {
      "optional": true
    }
  },
  "packageManager": "pnpm@7.13.5",
  "nano-staged": {
    "*": "prettier --write --ignore-unknown",
    "*.{ts,tsx,js,jsx}": "eslint --fix"
  }
}
